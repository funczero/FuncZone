{
  "compilerOptions": {
    /* Output */
    "outDir": "../../dist",
    "rootDir": "./",

    /* Language & Modules */
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowArbitraryExtensions": false,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,

    /* Aliases */
    "baseUrl": "./",
    "paths": {
      "@assets/*": ["assets/*"],
      "@core/*": ["core/*"],
      "@commands/*": ["commands/*"],
      "@events/*": ["events/*"],
      "@client/*": ["client/*"],
      "@utils/*": ["utils/*"],
      "@types/*": ["types/*"]
    }
  },
  "include": ["./"],
  "exclude": ["node_modules", "../../dist", "**/*.test.ts"]
}
