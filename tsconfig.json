{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@client/*": ["src/client/*"],
      "@commands/*": ["src/commands/*"],
      "@handlers/*": ["src/handlers/*"],
      "@events/*": ["src/events/*"],
      "@core/*": ["src/core/*"],
      "@config/*": ["src/config/*"],
      "@types/*": ["src/types/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["src", "assets"]
}
