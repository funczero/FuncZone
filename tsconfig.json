{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@assets/*": ["../assets/*"],
      "@client/*": ["client/*"],
      "@config/*": ["config/*"],
      "@core/*": ["core/*"],
      "@types/*": ["types/*"],
      "@handlers/*": ["handlers/*"],
      "@events/*": ["events/*"],
      "@utils/*": ["utils/*"],
      "@commands/*": ["commands/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
