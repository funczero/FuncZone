{
  "compilerOptions": {
    /* Output */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Language & Modules */
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowArbitraryExtensions": false,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "@assets/*": ["assets/*"],
      "@core/*": ["src/core/*"],
      "@commands/*": ["src/commands/*"],
      "@events/*": ["src/events/*"],
      "@client/*": ["src/client/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
