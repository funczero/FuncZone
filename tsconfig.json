{
  "compilerOptions": {
    /* Output */
    "outDir": "../../dist",
    "rootDir": "./",

    /* Language & Modules */
    "target": "ES2021",
    "module": "ES2020",
    "moduleResolution": "node",
    "moduleDetection": "force",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "allowArbitraryExtensions": false,

    /* Strictness */
    "strict": true,
    "skipLibCheck": true,

    /* Módulo base padrão */
    "baseUrl": "./"
  },
  "include": ["./"],
  "exclude": ["node_modules", "../../dist", "**/*.test.ts"]
}
